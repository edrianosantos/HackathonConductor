@model PaymentRating.Models.Usuario
@{
    ViewBag.Title = "Cadastro";
}

@using (Html.BeginForm("Cadastrar", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr/>
