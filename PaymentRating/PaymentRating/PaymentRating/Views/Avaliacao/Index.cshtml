@model IEnumerable<PaymentRating.Models.Avaliacao>
@{
    ViewBag.Title = "Avaliações";
}

﻿@section AddToHead{

    <style type="text/css">
        body {
            margin-top: 20px;
        }

        .glyphicon {
            margin-right: 5px;
        }

        .section-box h2 {
            margin-top: 0px;
        }

            .section-box h2 a {
                font-size: 15px;
            }

        .glyphicon-heart {
            color: #e74c3c;
        }

        .glyphicon-comment {
            color: #27ae60;
        }

        .separator {
            padding-right: 5px;
            padding-left: 5px;
        }

        .section-box hr {
            margin-top: 0;
            margin-bottom: 5px;
            border: 0;
            border-top: 1px solid rgb(199, 199, 199);
        }
    </style>
}

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="well well-sm">
                    <div class="row">
                        <div class="col-xs-3 col-md-2 text-center">
                            <img src="https://cdn4.iconfinder.com/data/icons/linecon/512/photo-128.png" alt="bootsnipp"
                                 class="img-rounded img-responsive" />
                            <h6><strong>@item.Usuario.Nome</strong></h6>
                        </div>
                        <div class="col-xs-9 col-md-9 section-box">
                            <h2>
                                @item.Comentario
                            </h2>
                            <p>
                                @item.Sugestao
                            </p>
                            <h4>Meio de Pagamento: @item.MeioPagamento.Descricao</h4>
                            <hr />
                            <div class="row rating-desc">
                                <div class="col-md-12">
                                    @for (int i = 1; i <= @item.Nota; i++)
                                    {
                                        <span class="glyphicon glyphicon-star"></span>
                                    }
                                    <span class="glyphicon glyphicon-calendar"></span>(@item.Data)
                                </div>
                            </div>
                            <div class="row col-md-12">
                                <br>
                                @string.Format("Recomenda esse meio de pagamento: {0}", @item.Recomendar ? "Sim" : "Não")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }


    </div>
</div>

